<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222016"
    tools:context=".Home">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="125dp"
        android:layout_height="113dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/licano" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="285dp"
        android:layout_height="113dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/licanonm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="616dp"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonMat"
            android:background="@drawable/botao_customizado"
            android:textColor = "#ffffff"
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_height="70dp"
            android:text="Matemática" />

        <Button
            android:id="@+id/buttonPort"
            android:background="@drawable/botao_customizado"
            android:layout_width="match_parent"
            android:textColor = "#ffffff"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"

            android:text="Português" />

        <Button
            android:id="@+id/btnHist"
            android:background="@drawable/botao_customizado"
            android:layout_width="match_parent"
            android:textColor = "#ffffff"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"
            android:text="História" />

        <Button
            android:id="@+id/btnCien"
            android:background="@drawable/botao_customizado"
            android:layout_width="match_parent"
            android:textColor = "#ffffff"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"
            android:text="Ciências" />

        <Button
            android:id="@+id/botaoListar"
            android:background="@drawable/botao_customizado"
            android:layout_width="match_parent"
            android:textColor = "#ffffff"
            android:layout_height="70dp"
            android:layout_marginBottom="50dp"
            android:text="Geral" />

        <Button
            android:id="@+id/botaoAdicionar"
            android:background="@drawable/botao_customizado"
            android:layout_width="match_parent"
            android:textColor = "#ffffff"
            android:layout_height="70dp"
            android:text="Adicionar" />
    </LinearLayout>

</RelativeLayout>